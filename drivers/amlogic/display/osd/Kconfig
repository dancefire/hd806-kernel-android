config FB_OSD1_480_DEFAULT_HEIGHT_VIRTUAL
	depends on FB_MULTI_OUTPUT_MODE
	int "Default OSD1 virtual height(MBX480)"
	range FB_OSD1_480_DEFAULT_HEIGHT 4096
	default 920
	---help---
