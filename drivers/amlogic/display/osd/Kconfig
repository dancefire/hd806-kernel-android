config FB_OSD1_480_DEFAULT_WIDTH_VIRTUAL
	depends on FB_MULTI_OUTPUT_MODE
	int "Default OSD1 virtual width(MBX480)"
	range FB_OSD1_480_DEFAULT_WIDTH 4096
	default 920
	---help---
